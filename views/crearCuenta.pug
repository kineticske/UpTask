doctype html
html(lang="en")
    head
        include partials/header
    body.login
        .contenedor-formulario
            h1 Crea tu cuenta en Uptask

            if locals.messages
                .alertas
                    each category in Object.keys(locals.messages)
                        each error in messages[category]
                            .alerta(class=`${category}`)
                                p=error

            form#formulario.caja.caja-login(method = "POST" action="/crear-cuenta")
                .campo
                    label(for="email") E-mail
                    input(type="email" name="email" placeholder="E-mail" value= email) 
                .campo
                    label(for="password") Password
                    input(type="password" name="password" placeholder="Password" value= password)
                .campo.enviar
                    input(type="submit" value="CREAR CUENTA")
                .campo 
                    a(href="/iniciar-sesion") Volver a Iniciar Sesi√≥n 

        script(src="/dist/bundle.js") 